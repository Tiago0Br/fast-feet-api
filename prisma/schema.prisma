generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  DELIVERY_PERSON
}

model User {
  id       String   @id @default(uuid())
  document String   @unique
  name     String
  password String
  role     UserRole

  @@map("users")
}
